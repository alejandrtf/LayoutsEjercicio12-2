<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/perro_y_gato"
    tools:context="com.android.alejandra.layoutsejercicio12_2.MainActivity">

    <TextView
        android:id="@+id/tvRojo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_red_dark"
        android:alpha="0.75"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/rojo"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNaranja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_orange_dark"
        android:alpha="0.75"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/naranja"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAmarillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/yellowTransparente"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/yellow"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvVerde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvAzul"
        android:layout_alignTop="@+id/tvAzul"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/tvAzul"
        android:layout_toStartOf="@+id/tvAzul"
        android:background="@color/verde"
        android:alpha="0.75"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/verde"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAzul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/blue"
        android:gravity="center"
        android:padding="10dp"
        android:alpha="0.75"
        android:text="@string/azul"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvVioleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvAzul"
        android:layout_alignTop="@+id/tvAzul"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/tvAzul"
        android:layout_toRightOf="@+id/tvAzul"
        android:alpha="0.75"
        android:background="@color/violeta"
        android:gravity="center"
        android:text="@string/violeta"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvRosa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/rosa"
        android:gravity="center"
        android:alpha="0.75"
        android:padding="10dp"
        android:text="@string/rosa"
        android:textStyle="bold" />
</RelativeLayout>
